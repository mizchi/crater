{
  "name": "@mizchi/crater",
  "version": "0.1.1",
  "description": "CSS Layout Engine - Box/Flex/Grid layout computation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "import": "./dist/wasm.js",
      "default": "./dist/wasm.js"
    },
    "./crater.wasm": "./dist/crater.wasm"
  },
  "bin": {
    "crater": "./cli/cli.mjs"
  },
  "files": [
    "dist/",
    "cli/"
  ],
  "scripts": {
    "build": "moon build --target js && moon build --target wasm-gc && npm run copy",
    "copy": "mkdir -p dist && cp _build/js/release/build/crater-js.js dist/crater.js && cp _build/wasm-gc/release/build/crater-js.wasm dist/crater.wasm && cp index.js index.d.ts wasm.js wasm.d.ts dist/",
    "prepublishOnly": "npm run build",
    "test": "node --test 'test/**/*.test.mjs'"
  },
  "keywords": [
    "css",
    "layout",
    "flexbox",
    "grid",
    "moonbit"
  ],
  "author": "mizchi",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizchi/crater",
    "directory": "js"
  },
  "engines": {
    "node": ">=24"
  }
}