#!/bin/bash
# crater - HTML/CSS Layout Renderer wrapper
# Automatically detects terminal size and passes to the MoonBit CLI

# Get terminal size
COLS=$(tput cols 2>/dev/null || echo 800)
ROWS=$(tput lines 2>/dev/null || echo 600)

# Run crater with detected size
exec moon run --target native cmd/main -- --width "$COLS" --height "$ROWS" "$@"
